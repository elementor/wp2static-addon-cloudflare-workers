<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="../tests/unit/bootstrap.php"
>
  <testsuites>
    <testsuite name="Unit Tests">
      <directory suffix=".php">../tests/unit</directory>
    </testsuite>
  </testsuites>
  <coverage processUncoveredFiles="true">
    <include>
      <directory suffix=".php">../src</directory>
    </include>
  </coverage>
</phpunit>
